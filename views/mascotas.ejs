<%- include("templates/cabecera", {tituloWeb:'Mascotas'}) %>

    <div class="container">
        <h1>CRUD MongoDB</h1>
        <a href="/mascotas/crear" class="btn btn-primary btn-lg btn-block">Crear</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Raza</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length> 0) { %>
                    <% arrayMascotas.forEach(mascota=> { %>
                        <tr>
                            <th scope="row">
                                <%= mascota.id %>
                            </th>
                            <td>
                                <%= mascota.nombre %>
                            </td>
                            <td>
                                <%= mascota.raza %>
                            </td>
                            <td>
                                <%= mascota.descripcion %>
                            </td>
                            <td>
                                <a href="/mascotas/<%= mascota.id %>" class="btn btn-primary">Editar</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %>
            </tbody>
        </table>

    </div>
    <%- include("templates/footer") %>